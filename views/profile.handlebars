
<div class="columns">
  <div class="column  is-one-third ">
    <article class="panel is-primary">
  <p class="panel-heading">
    Welcome, {{name}}!
  </p>
  <div class="card">
  <div class="card-image">
    <figure class="image is-4by3">
      <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
    </figure>
  </div>
</div>
  <a class="panel-block is-active">
    <span class="panel-icon">
      <i class="fas fa-book" aria-hidden="true"></i>
    </span>
    Distance: {{distance}}
  </a>
  <a class="panel-block">
    <span class="panel-icon">
      <i class="fas fa-book" aria-hidden="true"></i>
    </span>
    Time:
  </a>
  <a class="panel-block">
    <span class="panel-icon">
      <i class="fas fa-book" aria-hidden="true"></i>
    </span>
    Bio:
  </a>
  <a class="panel-block">
    <span class="panel-icon">
      <i class="fas fa-book" aria-hidden="true"></i>
    </span>
    jgthms.github.io
  </a>
</article>
  <div class="column is-two-third"></div>

</div>



</div>

  {{#if exercises.length}}
  <div class="col-md-6 exercise-list">
    <h3>Current exercises:</h3>

    {{#each exercises as |exercise|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/exercise/{{exercise.id}}">{{exercise.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{exercise.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
